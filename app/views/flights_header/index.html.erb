
<div class="container-fluid" ng-controller ="flights_header as header">
	<div class="admin-panel-wrapper">
		<div class="col-sm-2 pad-zero">
			<div class="menu-lists">
				<ul class="list-unstyled list_of_links">
					<li><a href ="#cities_list"> Flight Cities List</a></li>
					<li><a href ="#flights_header"> Flights Header</a></li>
				</ul>
			</div>
		</div>

		<div class="col-sm-10 pad-zero">
			<div class="admin-content" ng-if = "header.flights_header.length >= 1">
				<div>
					<h3 class="pull-left">Custom Menu Cities List</h3><br>
					<table width="100%">
						<thead>
							<th>dep_city_code</th>
							<th>arr_city_code</th>
							<th>page_type</th>
							<th>section</th>
							<th>language</th>
							<th></th>
							<th></th>
						</thead>
						<tr ng-repeat="route in header.flights_header track by $index">
							<td>{{route.dep_city_code}}</td>
							<td>{{route.arr_city_code}}</td>
							<td>{{route.page_type}}</td>
							<td>{{route.section}}</td>
							<td>{{route.language}}</td>
							<td><button class="savefields" ng-click="header.editChoice(route._id.$oid)">Edit</button>
								<button class="btn btn-danger" ng-click="header.deleteChoice(route._id.$oid)">Delete</button>
							</td>
						</tr>
					</table>
				</div>
			</div><!--Content-->
			<div class="no-card" ng-if = "header.flights_header.length  == 0">
				<span>No Custom Menus Found</span>
				<p><a href="/panel/flights_header/new/">Add Custom Menu</a></p>
			</div>
		</div>
		<div class="clearfix"></div>
	</div><!--/admin-panle-wrapper-->
</div>
<script type="text/javascript">
	var json = {
		"flights_header":<%= @flight_headers.to_json.html_safe %>
	}
</script>
